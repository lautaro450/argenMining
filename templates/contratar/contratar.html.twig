			                    <form name="sentMessage" id="contactForm" method="post" action="/contratar">
			                        <div class="row control-group">
			                            <div class="form-group col-xs-12 floating-label-form-group controls">
			                                <label>Nombre</label>

			                                <input type="text" class="form-control" placeholder="Nombre" id="firstName" name="firstName">
			                                <p class="help-block text-danger"></p>
			                            </div>
			                        </div>
			                        <div class="row control-group">
			                            <div class="form-group col-xs-12 floating-label-form-group controls">
			                                <label>Apellido</label>

			                                <input type="text" class="form-control" placeholder="Apellido" id="lastName" name="lastName">
			                                <p class="help-block text-danger"></p>
			                            </div>
			                        </div>
			                        <div class="row control-group">
			                            <div class="form-group col-xs-12 floating-label-form-group controls">
			                                <label>Email</label>

			                                <input type="email" class="form-control" placeholder="Email" id="email" name="email">
			                                <p class="help-block text-danger"></p>
			                            </div>
			                        </div>
			                        <div class="row control-group">
			                            <div class="form-group col-xs-12 floating-label-form-group controls">
			                                <label>Clave</label>

			                                <input type="password" class="form-control" placeholder="Clave" id="password" name="password">
			                                <p class="help-block text-danger"></p>
			                            </div>
			                        </div>
			                        <div id="success"></div>
			                        <div class="row" style="margin-top:20px;">
			                            <div class="form-group col-xs-12">
			                                <input type="submit" class="btn btn-success btn-lg" value="Crear cuenta" />
			                            </div>
			                        </div>
